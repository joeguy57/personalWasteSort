<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".instruction_activity"
  android:background="@mipmap/gamebackground">

  <ImageView
    android:id="@+id/instructionZone"
    android:layout_width="460dp"
    android:layout_height="119dp"
    android:contentDescription="@string/instruction_zone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.267"
    app:srcCompat="@mipmap/instructionlocation" />
  <TextView
    android:id="@+id/gameInstructions"
    android:layout_width="397dp"
    android:layout_height="112dp"
    android:fontFamily="@font/arial_rounded_mt_bold"
    android:gravity="center"
    android:text="@string/GameInstructions"
    app:layout_constraintBottom_toBottomOf="@+id/instructionZone"
    app:layout_constraintEnd_toEndOf="@+id/instructionZone"
    app:layout_constraintStart_toStartOf="@+id/instructionZone"
    app:layout_constraintTop_toTopOf="@+id/instructionZone" />

  <pl.droidsonroids.gif.GifImageView
    android:id="@+id/loading"
    android:layout_width="53dp"
    android:layout_height="56dp"
    android:src="@drawable/loader"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.771" />

</androidx.constraintlayout.widget.ConstraintLayout>