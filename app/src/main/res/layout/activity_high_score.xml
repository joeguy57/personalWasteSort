<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@mipmap/background"
  tools:context=".HighScore">

  <ImageView
    android:id="@+id/imageView4"
    android:layout_width="261dp"
    android:layout_height="84dp"
    android:layout_marginTop="30dp"
    app:layout_constraintBottom_toTopOf="@+id/yourScoreLocation"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@mipmap/highscoreheader" />
  <ImageView
    android:id="@+id/yourScoreLocation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="33dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView4"
    app:srcCompat="@mipmap/finalscore" />
  <ImageView
    android:id="@+id/nameinputlocation"
    android:layout_width="220dp"
    android:layout_height="37dp"

    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.916"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.402"
    app:srcCompat="@mipmap/inputzone" />
  <ImageView
    android:id="@+id/nameLocation"
    android:layout_width="106dp"
    android:layout_height="38dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.055"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.403"
    app:srcCompat="@mipmap/discrp" />
  <ImageView
    android:id="@+id/emailinputlocation"
    android:layout_width="220dp"
    android:layout_height="37dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.916"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.525"
    app:srcCompat="@mipmap/inputzone" />
  <ImageView
    android:id="@+id/emaillocation"
    android:layout_width="109dp"
    android:layout_height="39dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.055"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.527"
    app:srcCompat="@mipmap/discrp" />
  <TextView
    android:id="@+id/userEmail"
    android:layout_width="97dp"
    android:layout_height="38dp"
    android:fontFamily="@font/arial_rounded_mt_bold"
    android:gravity="center"
    android:text="Email :"
    android:textColor="#000000"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="@+id/emaillocation"
    app:layout_constraintEnd_toEndOf="@+id/emaillocation"
    app:layout_constraintStart_toStartOf="@+id/emaillocation"
    app:layout_constraintTop_toTopOf="@+id/emaillocation"
    app:layout_constraintVertical_bias="0.0" />
  <EditText
    android:id="@+id/userInputName"
    android:layout_width="171dp"
    android:layout_height="40dp"
    android:layout_marginEnd="1dp"
    android:ems="10"
    android:fontFamily="@font/arial_rounded_mt_bold"
    android:hint="Enter your name"
    android:inputType="textPersonName"
    app:layout_constraintBottom_toBottomOf="@+id/nameinputlocation"
    app:layout_constraintEnd_toEndOf="@+id/nameinputlocation"
    app:layout_constraintHorizontal_bias="0.419"
    app:layout_constraintStart_toStartOf="@+id/nameinputlocation"
    app:layout_constraintTop_toTopOf="@+id/nameinputlocation"
    app:layout_constraintVertical_bias="0.0" />
  <TextView
    android:id="@+id/enterName"
    android:layout_width="101dp"
    android:layout_height="39dp"
    android:fontFamily="@font/arial_rounded_mt_bold"
    android:gravity="center"
    android:text="Name : "
    android:textColor="#000000"
    android:textSize="18sp"
    app:layout_constraintBottom_toBottomOf="@+id/nameLocation"
    app:layout_constraintEnd_toEndOf="@+id/nameLocation"
    app:layout_constraintHorizontal_bias="0.521"
    app:layout_constraintStart_toStartOf="@+id/nameLocation"
    app:layout_constraintTop_toTopOf="@+id/nameLocation"
    app:layout_constraintVertical_bias="1.0" />
  <EditText
    android:id="@+id/userEmailName"
    android:layout_width="168dp"
    android:layout_height="40dp"
    android:ems="10"
    android:fontFamily="@font/arial_rounded_mt_bold"
    android:hint="Enter your email"
    android:inputType="textWebEmailAddress"
    app:layout_constraintBottom_toBottomOf="@+id/emailinputlocation"
    app:layout_constraintEnd_toEndOf="@+id/emailinputlocation"
    app:layout_constraintHorizontal_bias="0.384"
    app:layout_constraintStart_toStartOf="@+id/emailinputlocation"
    app:layout_constraintTop_toTopOf="@+id/emailinputlocation"
    app:layout_constraintVertical_bias="0.0" />
  <TextView
    android:id="@+id/playerScore"
    android:layout_width="145dp"
    android:layout_height="47dp"
    android:fontFamily="@font/arial_rounded_mt_bold"
    android:gravity="center"
    android:text="Your Score"
    android:textColor="#000000"
    android:textSize="24sp"
    app:layout_constraintBottom_toBottomOf="@+id/yourScoreLocation"
    app:layout_constraintEnd_toEndOf="@+id/yourScoreLocation"
    app:layout_constraintStart_toStartOf="@+id/yourScoreLocation"
    app:layout_constraintTop_toTopOf="@+id/yourScoreLocation" />
  <ImageView
    android:id="@+id/submitBtn"
    android:layout_width="141dp"
    android:layout_height="52dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.667"
    app:srcCompat="@drawable/submit_button" />

  <ImageView
    android:id="@+id/mainMenuBtn"
    android:layout_width="142dp"
    android:layout_height="53dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.776"
    app:srcCompat="@drawable/main_menu_button" />
</androidx.constraintlayout.widget.ConstraintLayout>